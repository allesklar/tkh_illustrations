<%= simple_form_for @album, html: { multipart: true } do |f| %>
  <%= f.error_notification %>

    <%= f.input :name,
                label: t('activerecord.attributes.albums.name'),
                input_html: { size: 45 } %>
    <%= f.input :description,
                label: t('activerecord.attributes.albums.description'),
                input_html: { cols: 45, rows: 5 } %>

    <%= f.input :images,
                label: t('activerecord.attributes.albums.images'),
                hint: "Adjust the filenames so that they sit in their folder in the order you want them to display later on."
                as: :file,
                input_html: { multiple: true } %>

    <%= f.input :body,
                label: t('activerecord.attributes.albums.body'),
                hint: "This formatted text will be displayed below your thumbnail photos",
                input_html: { class: 'tinymce' } %>
    <%= tinymce selector: 'textarea.tinymce',
                branding: false,
                height: 550,
                menubar: false, # hiding menu items duplicating icons
                plugins: "lists link image code fullscreen",
                toolbar: "formatselect bold italic strikethrough | bullist numlist | alignleft aligncenter alignright alignnone | link unlink image | undo redo selectall code fullscreen"
    %>                


    <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
